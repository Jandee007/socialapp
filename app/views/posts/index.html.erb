<div class="container my-4">
  <h1 class="text-center">All Posts</h1>

  <!-- Search Form -->
  <div class="mb-4">
    <%= form_with url: root_path, method: :get, local: true, class: "row g-3 align-items-center" do |form| %>
      <div class="col-auto">
        <%= form.label :query, "Search Posts:", class: "form-label fw-bold" %>
      </div>
      <div class="col-auto">
        <%= form.text_field :query, placeholder: "Enter title or content...", class: "form-control" %>
      </div>
      <div class="col-auto">
        <%= form.submit "Search", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <!-- Posts List -->
  <% if @posts.any? %>
    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card shadow-sm h-100">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= link_to post.title, post, class: "text-decoration-none" %></h5>
              <p class="card-text"><%= post.content.truncate(100) %></p>
              <% if user_signed_in? && current_user == post.user %>
                <div class="mt-auto">
                  <%= link_to 'Edit', edit_post_path(post), class: "btn btn-warning btn-sm me-2" %>
                  <%= form_with url: post_path(post), method: :delete, local: true, class: "d-inline-block" do %>
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-muted">No posts found.</p>
  <% end %>

  <!-- New Post Button -->
  <div class="text-center mt-4">
    <%= link_to 'New Post', new_post_path, class: "btn btn-success" %>
  </div>
</div>
